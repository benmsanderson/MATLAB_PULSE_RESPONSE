
figure(4)
clf
for i=1:4
  subplot(2,2,i)
  isplaus=find(min(eopt(:,:,1,i),[],2)>-10);

  areabar(tim3000(1:286),eopt(:,1:286,1,i)',10,[0.3,0.3,0.3])

  hold on
  
areabar(tim3000(287:end),eopt(:,287:end,1,i)',10,[0.3,0.8,0.3])
xlim([1950,2250])
hold on
  isplaus=find(min(eopt(:,:,2,i),[],2)>-10);

areabar(tim3000(287:end),eopt(:,287:end,2,i)',10,[0.5,0.5,0.8])
grid on
xlabel('Year')
ylabel('Emissions (GtC)')
ylim([-10,20])
title(['(' char(96+i) ') ' prnm{i} ]) 

end

   
